<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Greet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome please Enter your entry!"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name "
        android:layout_below="@+id/Greet"
        android:textAlignment="center"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/studID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student ID "
        android:layout_below="@+id/Name"
        android:textAlignment="center"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Contact  "
        android:layout_below="@+id/studID"
        android:textAlignment="center"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date of birth mm/dd/yy "
        android:layout_below="@+id/contact"
        android:textAlignment="center"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btn_Insert"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/bday"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="25dp"
        android:text="Insert data" />
    <Button
        android:id="@+id/btn_Update"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_Insert"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:text="Update data " />
    <Button
        android:id="@+id/btn_Del"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_Update"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:text="Delete data" />
    <Button
        android:id="@+id/btn_View"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_Del"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:text="View data" />

</RelativeLayout>