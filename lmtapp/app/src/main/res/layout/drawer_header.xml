<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="#dbf2fd">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/draw_img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:contentDescription="@string/reg_imgBrowse"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepic"
            app:civ_border_color="#dbf2fd"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#808080"
            app:civ_shadow_gravity="center"
            app:civ_shadow_radius="10" />


        <TextView
            android:id="@+id/drawer_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/draw_img4"
            android:layout_toEndOf="@+id/draw_img4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/drawer_txt1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/drawer_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/draw_img4"
            android:layout_toEndOf="@+id/draw_img4"
            android:layout_below="@id/drawer_txt1"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/drawer_txt2" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/draw_edtIinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/editinfos"
        android:contentDescription="@string/draw_edtIinfo" />
</RelativeLayout>