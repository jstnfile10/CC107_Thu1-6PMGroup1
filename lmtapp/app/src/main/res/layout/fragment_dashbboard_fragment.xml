<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_bgmain"
    tools:context=".dashbboard_fragment">



        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >


        </ViewFlipper>

    <RelativeLayout
        android:id="@+id/dash_rel2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/v_flipper"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="80dp"
            android:contentDescription="@string/imageView4"
            android:src="@drawable/cred_icon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_toEndOf="@id/imageView4"
            android:layout_toRightOf="@id/imageView4"
            android:contentDescription="@string/imageView5"
            android:src="@drawable/deb_icon" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dash_rel3"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/dash_rel2"
        android:background="@drawable/listviewdesign"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:elevation="50dp"
        tools:targetApi="lollipop"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/textview5" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_toRightOf="@id/textView5"
            android:layout_toEndOf="@id/textView5"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:layout_height="15dp"
            android:gravity="center_horizontal" />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:layout_below="@id/spinner"
        android:layout_margin="10dp"
         />
    </RelativeLayout>

</RelativeLayout>