<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ui_bgmain"
    tools:context=".registration">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/reg_imgBrowse"
        android:src="@drawable/ui_logo2nd" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/imageView3"
        android:layout_toRightOf="@id/imageView3"
        android:text="@string/texView4"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/reg_scrlView"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/reg_layoutbg"
        android:elevation="40dp"
        tools:ignore="UselessParent"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reg_scrlVerLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/reg_imgBrowse"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/reg_imgBrowse"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic"
                    app:civ_border_color="#dbf2fd"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#808080"
                    app:civ_shadow_gravity="center"
                    app:civ_shadow_radius="10" />

                <EditText
                    android:id="@+id/reg_edtFn"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtFn"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/reg_edtNum"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtNum"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/reg_edtAdres"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtAdres"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/reg_edtBday"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:hint="@string/reg_edtBday"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:textColorHint="#808080" />

                <EditText
                    android:id="@+id/reg_edtEml"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtEml"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/reg_edtUname"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtUname"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/reg_edtPword"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:ems="20"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:hint="@string/reg_edtPword"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:textColorHint="#808080"
                    tools:ignore="UnusedAttribute" />

                <Button
                    android:id="@+id/reg_btnDone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_signupbg"
                    android:text="@string/reg_btnDone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>